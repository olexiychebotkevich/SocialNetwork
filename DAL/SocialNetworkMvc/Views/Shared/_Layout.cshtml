<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @*@*<nav class="navbar navbar-dark fixed-top " style="background-image:url('https://24tv.ua/resources/photos/news/610x344_DIR/201812/1088510.jpg?201902114829')">*@
    <nav class="navbar navbar-expand-lg " style="background-color:sandybrown">
        <a class="navbar-brand" href="#" style="color:black;font-family: Algerian;font-size:40px">Mandarin</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("My Page", "MyPage", "Home", new { area = "" }, new { @class = "nav-link my-class" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Friends", "Friends", "Home", new { area = "" }, new { @class = "nav-link my-class" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("People", "People", "Home", new { area = "" }, new { @class = "nav-link my-class" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("My Groups", "MyGroups", "Home", new { area = "" }, new { @class = "nav-link my-class" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Groups", "Groups", "Home", new { area = "" }, new { @class = "nav-link my-class" })
                </li>

                @*<li class="nav-item">
            @Html.ActionLink("Group", "Group", "Home", new { area = "" }, new { @class = "nav-link my-class" })
        </li>*@
            </ul>

        </div>
        <form class="form-inline my-2 my-lg-0">
            @*<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">*@
            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Sign out</button>
        </form>

    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>