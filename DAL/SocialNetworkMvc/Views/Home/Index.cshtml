@model SocialNetworkMvc.Models.LoginModel
@{
    ViewBag.Title = "Home Page";
}
<link href="/Content/Custom.css" rel="stylesheet" type="text/css" />
<body class="bg-dark" style="background-image:url('https://kh.viyar.ua/store/Items/photos/ph25734.jpg')">

    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h3 class="mb-0" style="font-size:40px;font-family:Algerian">Log in</h3>
                            </div>
                            <div class="card-body">
                                <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("returnUrl", new { value = ViewBag.returnUrl })
                                        <div>
                                            @Html.ValidationSummary()

                                            <div class="form-group" style="font-family:Algerian;">
                                                @Html.DisplayNameFor(m => m.Email)<br>
                                                @Html.EditorFor(m => m.Email)

                                            </div>
                                            <div class="form-group" style="font-family:Algerian;">
                                                @Html.DisplayNameFor(m => m.Password)<br>
                                                @Html.EditorFor(m => m.Password)

                                            </div>
                                        </div>
                                    }

                                    <div id="menuBall2" class="menuBall" style="margin-right:5px">
                                        <a href="#" class="ball redball">
                                            <div class="menuText">
                                                Log in
                                            </div>
                                        </a>
                                    </div>
                                    <div id="menuBall2" class="menuBall">
                                        <a  href="/Account/Registration" class="ball redball">
                                            <div class="menuText">
                                               Register
                                                @*@Html.Action( "Account", "Registration")*@
                                            </div>
                                        </a>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
