@{
    ViewBag.Title = "Home Page";
}

<link href="/Content/Custom.css" rel="stylesheet" type="text/css" />
<body class="bg-dark" style="background-image:url('https://kh.viyar.ua/store/Items/photos/ph25734.jpg')">

    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h3 class="mb-0" style="font-size:40px;font-family:Algerian">Log in</h3>
                            </div>
                            <div class="card-body">
                                <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                    <div class="form-group">
                                        <label for="uname1" style="font-family:Algerian">Username</label>
                                        <input type="text" class="form-control form-control-lg rounded-0" name="uname1" id="uname1" required="">
                                        <div class="invalid-feedback">Oops, you missed this one.</div>
                                    </div>
                                    <div class="form-group">
                                        <label style="font-family:Algerian">Password</label>
                                        <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password">
                                        <div class="invalid-feedback">Enter your password too!</div>
                                    </div>
                                    <div>
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description small text-dark">Remember me on this computer</span>
                                        </label>
                                    </div>

                                </form>

                                <div id="menuBall2" class="menuBall" style="margin-right:5px">
                                    <a href="#" class="ball redball">
                                        <div class="menuText">
                                            Log in
                                        </div>
                                    </a>
                                </div>
                                <div id="menuBall2" class="menuBall">
                                    <a href="#" class="ball redball">
                                        <div class="menuText">
                                            Register
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>

